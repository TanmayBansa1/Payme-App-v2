
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?   @unique
  password  String?
  name      String?
  number    String     @unique 
  authType  AuthType
}

model Merchant {
  id        String   @id @default(cuid())
  name      String?
  email     String?   @unique
  password  String?
  number    String      @unique
  authType  AuthType
}

enum AuthType {
  Google
  Github
  Phone
}